{
  "version": 2,
  "builds": [
    {
      "src": "src/app.ts",
      "use": "@vercel/node",
      "functions": {
        "/src/app.ts": { "maxDuration": 300 }
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/src/app.ts",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "*",
        "Access-Control-Allow-Headers": "X-Requested-With,Content-Type,Accept"
      }
    }
  ],
  "ignoreCommand": "git diff HEAD^ HEAD --quiet ."
}
